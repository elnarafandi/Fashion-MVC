@{
    ViewData["Title"] = "Contact Page";
}


<!-- Contact Section Begin -->
<section style="padding: 60px 0; background-color: #f8f9fa;">
    <div style="max-width: 1140px; margin: 0 auto; padding: 0 15px;">
        <div style="text-align: center; margin-bottom: 50px;">
            <span style="text-transform: uppercase; color: #6c757d; font-weight: 600;">Get In Touch</span>
            <h2 style="font-size: 2.5rem; font-weight: 700;">We're Here to Help</h2>
            <p style="color: #6c757d;">
                Reach out to us anytime and we'll happily answer your questions. Our offices are located in multiple regions to serve you better.
            </p>
        </div>

        <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 30px;">
            <div style="background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 0 15px rgba(0,0,0,0.05); flex: 1 1 300px; text-align: center;">
                <div style="font-size: 2rem; color: #0d6efd; margin-bottom: 15px;">
                    📞
                </div>
                <h5 style="font-weight: 700;">Phone</h5>
                <p style="color: #6c757d; margin: 0;">123456789</p>
            </div>

            <div style="background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 0 15px rgba(0,0,0,0.05); flex: 1 1 300px; text-align: center;">
                <div style="font-size: 2rem; color: #0d6efd; margin-bottom: 15px;">
                    ✉️
                </div>
                <h5 style="font-weight: 700;">Email</h5>
                <p style="color: #6c757d; margin: 0;">support@example.com<br>info@example.com</p>
            </div>

            <div style="background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 0 15px rgba(0,0,0,0.05); flex: 1 1 300px; text-align: center;">
                <div style="font-size: 2rem; color: #0d6efd; margin-bottom: 15px;">
                    📍
                </div>
                <h5 style="font-weight: 700;">Address</h5>
                <p style="color: #6c757d; margin: 0;">195 E Parker Square Dr, CO<br>109 Avenue Léon, Clermont-Ferrand</p>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
