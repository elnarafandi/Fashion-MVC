@{
    ViewData["Title"] = "Shop Deatil Page";
}


<div class="container py-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="~/img/shop-details/product-big.png" class="card-img-top" alt="Product Image">
                <div class="card-body text-center">
                    <div class="row g-2 justify-content-center">
                        <div class="col-3">
                            <img src="~/img/shop-details/thumb-1.png" class="img-thumbnail" alt="Thumbnail 1">
                        </div>
                        <div class="col-3">
                            <img src="~/img/shop-details/thumb-2.png" class="img-thumbnail" alt="Thumbnail 2">
                        </div>
                        <div class="col-3">
                            <img src="~/img/shop-details/thumb-3.png" class="img-thumbnail" alt="Thumbnail 3">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 style="font-size: 2rem; color: #333; font-weight: bold; margin-bottom: 10px;">Elegant Watch Classic Edition</h1>
            <h3 style="font-size: 1.2rem; color: #6c757d; margin-bottom: 8px;">Category: <span style="color: #343a40; font-weight: 600;">Luxury Watches</span></h3>
            <h5 style="font-size: 1rem; color: #6c757d; margin-bottom: 15px;">Size: <span style="color: #343a40; font-weight: 600;">42mm</span></h5>

            <div style="margin-bottom: 20px;">
                <span style="font-size: 1.8rem; font-weight: 700; color: #28a745;">$299.99</span>
            </div>

            <p style="color: #6c757d; font-size: 1rem;">
                Timeless elegance meets modern functionality in this classic timepiece. Crafted from premium materials,
                featuring water resistance and a sophisticated design that suits any occasion.
            </p>
        </div>
    </div>
</div>
