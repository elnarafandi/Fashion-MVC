<div class="container my-4">

    <!-- Heading -->
    <h1 class="text-center text-dark mb-4">Create Product</h1>

    <!-- Product Form Section -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="post" action="/Admin/Product/Create">
                <!-- Product Name -->
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>

                <!-- Product Price -->
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="Price" name="Price" step="0.01" required />
                </div>

                <!-- Product Description -->
                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea class="form-control" id="Description" name="Description" rows="4" required></textarea>
                </div>

                <!-- Product Size -->
                <div class="mb-3">
                    <label for="Size" class="form-label">Size</label>
                    <input type="text" class="form-control" id="Size" name="Size" required />
                </div>

                <!-- Product Category -->
                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                    <select class="form-select" id="CategoryId" name="CategoryId" required>
                        <option value="">Select Category</option>
                        <!-- Categories should be dynamically loaded here -->
                        <option value="1">T-shirt</option>
                        <option value="2">Jeans</option>
                        <option value="3">Jacket</option>
                    </select>
                </div>

                <!-- Product Images -->
                <div class="mb-3">
                    <label for="ProductImages" class="form-label">Product Images</label>
                    <input type="file" class="form-control" id="ProductImages" name="ProductImages" multiple />
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Create Product</button>
                </div>
            </form>
        </div>
    </div>
</div>
